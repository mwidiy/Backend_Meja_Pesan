// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. USER (KHUSUS KASIR & OWNER)
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  googleId  String?  @unique
  role      String   @default("cashier")
  createdAt DateTime @default(now())
  store     Store?
}

model Store {
  id              Int      @id @default(autoincrement())
  name            String   @default("Nama Resto")
  logo            String? 
  qrisImage       String? 
  
  ownerId         Int      @unique 
  owner           User     @relation(fields: [ownerId], references: [id])
  
  updatedAt       DateTime @updatedAt
}

// 2. MEJA & QR MANAGEMENT
model Location {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  tables    Table[]
}

model Table {
  id         Int      @id @default(autoincrement())
  name       String
  qrCode     String   @unique
  isActive   Boolean  @default(true)
  orders     Order[]

  // Relasi ke Location
  locationId Int
  location   Location @relation(fields: [locationId], references: [id])
}

// 3. MENU MAKANAN
// 3. KATEGORI MENU (NEW)
model Category {
  id        Int       @id @default(autoincrement())
  name      String    @unique // Unique agar tidak ada kategori kembar
  products  Product[]
}

// 4. MENU MAKANAN (UPDATED)
model Product {
  id          Int         @id @default(autoincrement())
  name        String
  
  // Relasi ke Category
  categoryId  Int
  category    Category    @relation(fields: [categoryId], references: [id])

  price       Int
  image       String?
  description String?
  isActive    Boolean     @default(true)
  prepTime    Int         @default(5) // Estimasi waktu masak dalam menit
  orderItems  OrderItem[]
}

// 4. BANNER PROMOSI
model Banner {
  id            Int     @id @default(autoincrement())
  title         String
  subtitle      String?
  highlightText String?
  image         String
  isActive      Boolean @default(true)
  createdAt     DateTime @default(now())
}

// 5. TRANSAKSI (HEADER)
model Order {
  id            Int         @id @default(autoincrement())
  transactionCode String    @unique
  queueNumber   Int       @default(0) // Daily Queue Number (A-01)
  expiresAt     DateTime?
  createdAt     DateTime    @default(now())
  
  tableId       Int?
  table         Table?      @relation(fields: [tableId], references: [id])
  
  customerName  String
  orderType     String
  paymentMethod String?
  paymentStatus String      @default("Unpaid")
  status        String      @default("Pending")
  totalAmount   Int
  estimatedTime String?
  targetTime    DateTime?   // Waktu selesai real-time (untuk Countdown)
  note          String?
  deliveryAddress String?
  
  items         OrderItem[]
}

// 6. DETAIL TRANSAKSI (ITEM)
model OrderItem {
  id            Int     @id @default(autoincrement())
  orderId       Int
  order         Order   @relation(fields: [orderId], references: [id])
  productId     Int
  product       Product @relation(fields: [productId], references: [id])
  quantity      Int
  priceSnapshot Int
  note          String?
}


